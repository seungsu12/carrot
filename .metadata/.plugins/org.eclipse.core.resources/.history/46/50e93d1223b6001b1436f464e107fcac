<script>
	
	function checkValue(){
		if(!document.userinfo.name.value){
			alert("이름을 입력하세요 !")
		}
		if(!document.userinfo.id.value){
			alert("아이디를 입력하세요!");
			return false;
		}
		if(!document.userinfo.pwd.value){
			alert("비밀번호를 입력하세요!")
			return false;
		}
		if(!document.userinfo.phone_number.value){
			alert("전화번호를 입력하시오.");
			return false;
		}
	}


</script>
</head>
