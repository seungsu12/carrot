	<script type = "text/javascript">
		
		let i =0;
		function changeImg(){
			let opc =0.1;
			console.log("changeimg 호출 ");
			let obj = document.getElementById('intro_img');
			
 		 	let arr = new Array("1.jpg","2.jpg","3.jpg","4.jpg","5.jpg");
			obj.style.opacity =0;
 		 	obj.src ="img/"+arr[i]; 
			i +=1;
			if(i==4) {
				i=0};			
			let timer = setInterval( () =>{
				opc = opc +0.3
				obj.style.opacity = opc;
				console.log("timer 호출 , opc : "+opc);
			}
				,300);
			 setTimeout(() => {clearInterval(timer);},1000);
		}
		
		function img_load(obj,opc){
			console.log('img_load 함수 호출');
			if(opc < 1){
				opc+=0.1;
				console.log('opc : '+opc);
				obj.style.opacity = opc;
				setTimeout(img_load(obj,opc),300);
			}
			obj.style.opacity =0;
			return;
		}
		function fadeIn(target){
			let level = 0;
			let inTimer = null;
			inTimer = setInterval(function(){
				level = fadeInAction(target,level,inTimer);
			},50);	
		}
		function fadeinAction(target,level,inTimer){
			level = level + 0.1;
			changeOpacity(target,level);
			if(level >1) clearInterval(inTimer);
			return level;
		}
		
		
		
		function changeOpacity(target,level){
			let obj = target;
			obj.style.opacity =level;
			obj.style.Mozopacity=level;
			obj.style.KhtmlOpacity = level;
			obj.style.MsFilter ="'progid: DXImageTransform.Microsoft.Alpha(Opacity=" +(level*100);
			obj.style.filter ="alpha(opacity=" +(level* 100) + ");";
		}
		 
	</script>
