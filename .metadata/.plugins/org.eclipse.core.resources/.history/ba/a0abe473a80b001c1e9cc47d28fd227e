#default {
  .main-menu {
    .sub-menu {
      display: none;
      transition: opacity 0.5s;
    }
    &:hover {
      .sub-menu {
        display: block;
      }
    }
  }
}

#keyframe {
  .main-menu {
    .sub-menu {
      display: none;
      transform-origin: top center;
      animation: menuAni 0.5s;
    }
    &:hover {
      .sub-menu {
        display: block;
      }
    }
  }
}

@keyframes menuAni {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

#visibility {
  .main-menu {
    .sub-menu {
      visibility:hidden;
      transform-origin: top center;
      opacity: 0;
      transition:all 0.5s;
    }
    &:hover {
      .sub-menu {
        visibility:visible;
        opacity: 1;
      }
    }
  }
}

#pointer {
  .main-menu {
    .sub-menu {
      opacity: 0;
      pointer-events:none;
      transition:all 0.5s;
    }
    &:hover {
      .sub-menu {
        opacity: 1;
        pointer-events:auto;
      }
    }
  }
}