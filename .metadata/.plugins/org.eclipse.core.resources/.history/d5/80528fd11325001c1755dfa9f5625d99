	@Override
	public void doGet(HttpServletRequest req, HttpServletResponse res) throws ServletException,IOException{
		
		req.setCharacterEncoding("utf-8");
		
		System.out.println("get 호출");
		res.sendRedirect("main.jsp");
	}
	@Override
	public void doPost(HttpServletRequest req, HttpServletResponse res) throws ServletException,IOException{
		System.out.println("post 실행");
		req.setCharacterEncoding("utf-8");
		String[] pageList = {"orderform_first","orderform_second","orderform_third"};
		int index = 0;
		
		
//		if(req.getAttribute("orderform_type") != null){
//			index =  (int) req.getAttribute("orderform_type");
//		}
		
		
		req.setAttribute("form_number", pageList[index]);
		
		RequestDispatcher rd = req.getRequestDispatcher("test.jsp");
		rd.forward(req, res);
		
		
	}
}
